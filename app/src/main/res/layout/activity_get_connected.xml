<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.homework7.GetConnected">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imgViewDisplayPicture"
        android:background="@drawable/profile_pic"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/empty" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgViewDisplayPicture"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="19dp"
        android:id="@+id/txtdisplayName"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imgLogout"
        android:layout_alignTop="@+id/imgViewDisplayPicture"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/logot"
         />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_below="@+id/imgLogout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/btnUpload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnUploadImages"
        android:background="@drawable/button_style"
        android:layout_marginBottom="42dp"
        android:layout_above="@+id/btnNewMessage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Send Message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnNewMessage"
        android:background="@drawable/button_style"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/rvforUser"
        android:layout_below="@+id/txtdisplayName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:layout_above="@+id/btnUploadImages"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/my_profile"
        android:src="@drawable/myprofile"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/inbox"
        android:layout_toStartOf="@+id/inbox"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/others"
        android:src="@drawable/others"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imgLogout"
        android:layout_toStartOf="@+id/imgLogout"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/inbox"
        android:src="@drawable/inbox"
        app:srcCompat="@drawable/inbox"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/others"
        android:layout_toStartOf="@+id/others" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/nopic"
        android:id="@+id/imgNoPic"
        android:layout_below="@+id/txtdisplayName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp" />

    <TextView
        android:text="Photos Appear Here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtnoPhotos"
        android:textStyle="italic"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/imgNoPic"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/unread"
        android:textStyle="bold"
        android:textColor="#FF4081"
        android:layout_marginLeft="205dp"
        android:layout_marginTop="10dp"/>


</RelativeLayout>
