<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="100dp"
    android:layout_height="90dp"
    android:padding="3dp"
    android:background="@drawable/row_texture"
    >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imgOfUser"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:srcCompat="@drawable/delete"
        android:id="@+id/imgdel"
        android:layout_alignTop="@+id/imgOfUser"
        android:layout_alignRight="@+id/imgOfUser"
        android:layout_alignEnd="@+id/imgOfUser" />

</RelativeLayout>