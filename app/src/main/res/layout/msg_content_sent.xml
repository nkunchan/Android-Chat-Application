<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@drawable/sent_texture"
    android:weightSum="1"
    android:id="@+id/rcvd_id">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/send_img"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sent_msg"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sent_msg_time"
        android:textStyle="italic"
        android:layout_below="@+id/sent_msg"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/sent_img_time"
        android:layout_below="@id/send_img"


         />

</RelativeLayout>